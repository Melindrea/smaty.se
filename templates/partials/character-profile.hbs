<div class="character-profile">
    <h2>Profile</h2>
    <dl>
        {{#if names}}
        <dt>Names</dt>
        {{#each names}}
        <dd class="group">{{ . }}</dd>
        {{/each}}
        {{/if}}
        {{#if titles}}
        <dt>Titles</dt>
        {{#each titles}}
        <dd class="group">{{ . }}</dd>
        {{/each}}
        {{/if}}
        <dt class="inline">Era</dt>
        <dd>{{ era }}</dd>
        <dt class="inline">Status</dt>
        <dd>{{ status }}</dd>
        <dt class="inline">Age</dt>
        <dd>{{ age }}</dd>
        <dt class="inline">Origin</dt>
        <dd>{{ origin }}</dd>
        <dt class="inline">Culture</dt>
        <dd>{{ culture }}</dd>
        <dt class="inline">Allegiance</dt>
        <dd>{{ allegiance }}</dd>
        {{#if family}}
        <dt>Family</dt>
        {{#each family}}
        <dd class="group">{{ . }}</dd>
        {{/each}}
        {{/if}}
    </dl>
</div>
